#:kivy 2.1.0

<Pinball>:
    size: 30, 30
    canvas:
        Color:
            rgba: 4/244,213/255,237/255,1
        Ellipse:
            pos: self.pos
            size: self.size

<RectanglePlatform>:
    elasticity: 0.7
    size: 30, 30
    canvas:
        Color:
            rgba: 4/244,213/255,237/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    TopPoint:
        id: toppoint
        x: self.parent.center_x
        y: self.parent.center_y + 14
    BotPoint:
        id: botpoint
        x: self.parent.center_x
        y: self.parent.center_y - 15
    LeftPoint:
        id: leftpoint
        x: self.parent.x
        y: self.parent.center_y
    RightPoint:
        id: rightpoint
        x: self.parent.x + 29
        y: self.parent.center_y

<ElasticRectanglePlatform>:
    elasticity: 1
    size: 30, 30
    canvas:
        Color:
            rgba: 255/255,46/255,132/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    TopPoint:
        id: toppoint
        x: self.parent.center_x
        y: self.parent.center_y + 14
    BotPoint:
        id: botpoint
        x: self.parent.center_x
        y: self.parent.center_y - 15
    LeftPoint:
        id: leftpoint
        x: self.parent.x
        y: self.parent.center_y
    RightPoint:
        id: rightpoint
        x: self.parent.x + 29
        y: self.parent.center_y

<Bumper>:
    elasticity: 0.7
    size: 10, 10
    canvas:
        Color:
            rgba: 4/244,213/255,237/255,1
        Ellipse:
            pos: self.pos
            size: self.size
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 1
        y: self.parent.center_y - 1

<ElasticBumper>:
    elasticity: 1
    size: 10, 10
    canvas:
        Color:
            rgba: 255/255,46/255,132/255,1
        Ellipse:
            pos: self.pos
            size: self.size
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 1
        y: self.parent.center_y - 1

<Paddle>:
    elasticity: 1.2
    size: 200, 10
    canvas:
        Color:
            rgba: 45/255,255/255,12/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    PaddleComponent:
        id: paddlecomponent
        x: self.parent.x
        y: self.parent.y + 10
        
<BumperComponent>:
    size: 2, 2
    angle: -1
    canvas:
        Color:
            rgba: 0,1,0,0
        Ellipse:
            pos: self.pos
            size: self.size

<PaddleComponent>:
    size: 200, 5
    angle: 0
    canvas:
        Color: 
            rgba: 1,0,0,0
        Ellipse:
            pos: self.pos
            size: self.size  

<TopPoint>:
    size: 1, 1
    angle: 0
    canvas:
        Color:
            rgba: 0,1,1,0
        Ellipse:
            pos: self.pos
            size: self.size

<BotPoint>:
    size: 1, 1
    angle: 180
    canvas:
        Color:
            rgba: 1,0,1,0
        Ellipse:
            pos: self.pos
            size: self.size

<LeftPoint>:
    size: 1, 1
    angle: 270
    canvas:
        Color:
            rgba: 1,1,0,0
        Ellipse:
            pos: self.pos
            size: self.size

<RightPoint>:
    size: 1, 1
    angle: 90
    canvas:
        Color:
            rgba: 1,0,0,0
        Rectangle:
            pos: self.pos
            size: self.size

