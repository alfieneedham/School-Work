#:kivy 1.0.0

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    Label:
        font_size: 35
        center_x: root.width * 1 / 10
        top: root.top - 20
        text: "0"
    Label:
        font_size: 35
        center_x: root.width * 9 / 10
        top: root.top - 20
        text: "0"
    PongBall:
        id: pong_ball
        center: self.parent.center