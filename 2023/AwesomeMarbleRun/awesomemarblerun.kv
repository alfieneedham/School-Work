#:kivy 2.1.0

<Marble>:
    size: 30, 30
    canvas:
        Color:
            rgba: 4/244,213/255,237/255,1
        Ellipse:
            pos: self.pos
            size: self.size

<RectanglePlatform>:
    elasticity: 0.7
    size: 30, 30
    canvas:
        Color:
            rgba: 4/244,213/255,237/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    TopLine:
        id: topline
        x: self.parent.center_x - 5
        y: self.parent.center_y + 12
    BotLine:
        id: botline
        x: self.parent.center_x - 5
        y: self.parent.center_y - 15
    LeftLine:
        id: leftline
        x: self.parent.center_x - 15
        y: self.parent.center_y + 5
    RightLine:
        id: rightline
        x: self.parent.center_x + 12
        y: self.parent.center_y + 5
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 15
        y: self.parent.center_y - 15
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x + 11
        y: self.parent.center_y - 15
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 15
        y: self.parent.center_y + 11
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x + 11
        y: self.parent.center_y + 11

<ElasticRectanglePlatform>:
    elasticity: 1.2
    size: 30, 30
    canvas:
        Color:
            rgba: 255/255,46/255,132/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    TopLine:
        id: topline
        x: self.parent.center_x - 5
        y: self.parent.center_y + 12
    BotLine:
        id: botline
        x: self.parent.center_x - 5
        y: self.parent.center_y - 15
    LeftLine:
        id: leftline
        x: self.parent.center_x - 15
        y: self.parent.center_y + 5
    RightLine:
        id: rightline
        x: self.parent.center_x + 12
        y: self.parent.center_y + 5
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 15
        y: self.parent.center_y - 15
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 15
        y: self.parent.center_y + 13
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x + 13
        y: self.parent.center_y - 15
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x + 13
        y: self.parent.center_y + 13

<Bumper>:
    elasticity: 0.7
    size: 10, 10
    canvas:
        Color:
            rgba: 4/244,213/255,237/255,1
        Ellipse:
            pos: self.pos
            size: self.size
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 1
        y: self.parent.center_y - 1

<ElasticBumper>:
    elasticity: 1.2
    size: 10, 10
    canvas:
        Color:
            rgba: 255/255,46/255,132/255,1
        Ellipse:
            pos: self.pos
            size: self.size
    BumperComponent:
        id: bumpercomponent
        x: self.parent.center_x - 1
        y: self.parent.center_y - 1

<BumperComponent>:
    size: 2, 2
    angle: -1
    canvas:
        Color:
            rgba: 0,1,0,0
        Ellipse:
            pos: self.pos
            size: self.size

<TopLine>:
    size: 10, 3
    angle: 0
    canvas:
        Color:
            rgba: 0,1,1,0
        Rectangle:
            pos: self.pos
            size: self.size

<BotLine>:
    size: 10, 3
    angle: 180
    canvas:
        Color:
            rgba: 1,0,1,0
        Rectangle:
            pos: self.pos
            size: self.size

<LeftLine>:
    size: 3, -10
    angle: 270
    canvas:
        Color:
            rgba: 1,1,0,0
        Rectangle:
            pos: self.pos
            size: self.size

<RightLine>:
    size: 3, -10
    angle: 90
    canvas:
        Color:
            rgba: 1,0,0,0
        Rectangle:
            pos: self.pos
            size: self.size
        
