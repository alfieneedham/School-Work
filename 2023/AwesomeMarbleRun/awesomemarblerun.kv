#:kivy 2.1.0

<Marble>:
    size: 15, 15 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<SquarePlatform>:
    size: 15, 15
    angle: 90
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Scene>:
    marble: marblemarble
    platform: squareplatform

    Marble:
        id: marblemarble
        x: self.parent.center_x
        top: self.parent.top-50

    SquarePlatform:
        id: squareplatform
        x: self.parent.center_x
        y: self.parent.center_y
        